<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.my.elyo.asteroides_moviles.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="30dp"
        tools:context=".MainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic"
            android:id="@+id/ic"
            android:contentDescription="@string/tituloAplicacion"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tituloAplicacion"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            tools:elevation="12dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:id="@+id/Titulo"/>

        <Button
            android:id="@+id/Button01"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/Arrancar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:fontFamily="monospace"
            android:typeface="monospace"
            android:onClick="lanzarJuego"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/Button02"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/Configurar"
            android:onClick="lanzarPreferencias"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:fontFamily="monospace"
            android:typeface="monospace"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/Button03"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/Acercade"
            android:onClick="lanzarAcercaDe"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:fontFamily="monospace"
            android:typeface="monospace"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/Button04"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/Salir"
            android:onClick="salir"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:fontFamily="monospace"
            android:typeface="monospace"
            android:textSize="20sp"
            />
    </LinearLayout>
</RelativeLayout>
